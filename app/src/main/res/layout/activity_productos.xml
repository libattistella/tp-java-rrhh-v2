<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductosActivity">
<TextView
    android:text="Seleccionar una categoria"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<Spinner
    android:id="@+id/cmbProductosCategoria"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></Spinner>

<TextView
    android:text="Lista de productos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<ListView
    android:id="@+id/lstProductos"
    android:layout_weight="1"
    android:choiceMode="singleChoice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></ListView>
    <TextView
        android:text="Cantidad a pedir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText android:id="@+id/edtProdCantidad"
        android:text="0"
        android:inputType="number"
        android:nextFocusForward="@id/btnProdAddPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <Button
        android:id="@+id/btnProdAddPedido"
        android:text="Agregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>